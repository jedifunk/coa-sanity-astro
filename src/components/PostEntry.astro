---
import { getSanityImageUrl } from '../lib/helpers.js'
import { Image, Picture } from '@astrojs/image/components'
import PostMeta from './PostMeta.astro'
export interface Props {
  article: any
}
const { article } = Astro.props
---

<article class="post-entry" >
  <figure>
    <a href={`/${article.slug.current}`}>
      {article.featuredImage && <Picture src={getSanityImageUrl(article.featuredImage).width(347).height(296).url()} widths={[347]} aspectRatio={16/9} alt={article.featuredImage.alt}/>}
    </a>
    <figcaption>
      <h2 class="entry-title">
        <a href={`/${article.slug.current}`}>{article.title}</a>
      </h2>
      <PostMeta article={article} />

      <div class="excerpt">{article.excerpt}</div>
    </figcaption>
  </figure>
</article>