---
import { getSanityImageUrl } from '../lib/helpers.js'
import Picture from 'astro-sanity-picture'
import PostMeta from './PostMeta.astro'
export interface Props {
  article: any
}
const { article } = Astro.props
---

<article class="post-entry" >
  <figure>
    <a href={`/${article.slug.current}`}>
      {article.featuredImage && 
        <Picture src={article.featuredImage} widths={[400, 1000]} imageUrlBuilder={getSanityImageUrl()} alt={article.featuredImage.alt}/>
      }
    </a>
    <figcaption>
      <h2 class="entry-title">
        <a href={`/${article.slug.current}`}>{article.title}</a>
      </h2>
      <PostMeta article={article} />

      <div class="excerpt">{article.excerpt}</div>
    </figcaption>
  </figure>
</article>