---
import { getSanityImageUrl } from '../lib/helpers.js'
//import { Image } from '@astrojs/image/components'
import PostMeta from './PostMeta.astro'
export interface Props {
  article: any
}
const { article } = Astro.props
---

<article class="post-entry" >
  	<!-- <Fragment set:text={JSON.stringify(article)}/> -->

  <figure>
    <a href={`/`}>
      <!-- {article.featuredImage && <Image src={getSanityImageUrl(article.featuredImage).width(347).height(296).url()} width={[347]} aspectRatio='16/9' />} -->
      {article.featuredImage && <img width="347" loading="lazy" src={getSanityImageUrl(article.featuredImage).width(347).height(296).url()} />}
    </a>
    <figcaption>
      <h2 class="entry-title">
        <a href={`/${article.slug.current}`}>{article.title}</a>
      </h2>
      <PostMeta article={article} />

      <div class="excerpt">{article.excerpt}</div>
    </figcaption>
  </figure>
</article>