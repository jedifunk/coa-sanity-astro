---
import { useSanityClient } from '@sanity/astro'
import { siteSettings } from '../lib/queries.js'
import { getSanityImageUrl } from '../lib/helpers.js'

const allSiteSettings = await useSanityClient().fetch(siteSettings)

---

<div class="hero">
  {allSiteSettings[0].hpHero && <img loading="eager" src={getSanityImageUrl(allSiteSettings[0].hpHero).url()} sizes='(min-width: 400px) 726px, 347px' alt={allSiteSettings[0].hpHero.alt}/>}
</div>