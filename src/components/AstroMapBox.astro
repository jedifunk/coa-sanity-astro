let outdoorsG = outdoors.map((pp) => {
  return (
    {
      type: 'Feature', 
      geometry: {
        type: 'Point', 
        coordinates: [pp.venue.location.lng, pp.venue.location.lat]
      },
      properties: {
        title: pp.venue.name
      }
    }
  )
