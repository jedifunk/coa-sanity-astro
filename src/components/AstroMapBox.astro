const outdoorsGeoJSON = JSON.stringify({
  type: 'FeatureCollection',
  features: outdoorsG
})

let histMonG = histMons.map((histMon) => {
  return (
    {
      type: 'Feature',
      geometry: {
        type: 'Point', 
        coordinates: [histMon.venue.location.lng, histMon.venue.location.lat]
      },
      properties: {
