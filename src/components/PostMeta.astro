---
import { formatBlogPostDate } from "../lib/helpers"

export interface Props {
  article: any
}
const { article } = Astro.props
---

<div class="entry-meta">
  <span class="posted-on"><time class="entry-date">{formatBlogPostDate(article.publishDate)}</time></span>
  <div>
    <ul class="cat-links">
      {article.country && <li><a class="pill" href={`/${article.country.slug.current}`}>{article.country.name}</a></li>}
      {article.categories && article.categories.map(cat => (
        <li><a class="pill" href={`/${cat.slug.current}`}>{cat.title}</a></li>
      ))}
      </ul>
  </div>
</div>