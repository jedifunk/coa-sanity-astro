---
import { getSanityImageUrl } from '../lib/helpers.js'
import PostMeta from './PostMeta.astro'
export interface Props {
  article: any
}
const { article } = Astro.props
---
<article class="featured-item">
  <figure>
    <a href={`/${article.slug.current}`}>
      <!-- {article.featuredImage && <Picture src={getSanityImageUrl(article.featuredImage).url()} widths={[568]} aspectRatio={16/9} alt={article.featuredImage.alt}/>} -->
      {article.featuredImage && <img src={getSanityImageUrl(article.featuredImage).url()} alt={article.featuredImage.alt}/>}
    </a>
    <figcaption>
      <h2 class="entry-title">
        <a href={`/${article.slug.current}`}>{article.title}</a>
      </h2>
      <PostMeta article={article} />

      <div class="excerpt">{article.excerpt}</div>
    </figcaption>
  </figure>
</article>