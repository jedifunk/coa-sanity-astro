---
import { getSanityImageUrl } from '../lib/helpers.js'
//import { Picture, Image } from '@astrojs/image/components'
import PostMeta from './PostMeta.astro'
export interface Props {
  article: any
}
const { article } = Astro.props
const fImg = getSanityImageUrl(article.featuredImage).url()
---
<article class="featured-item">
  <figure>
    <a href={`/${article.slug.current}`}>
      <!-- {article.featuredImage && <Picture src={getSanityImageUrl(article.featuredImage).width(568).height(320).url()} widths={[568]} aspectRatio="16:9" alt={article.featuredImage.alt}/>} -->
      {article.featuredImage && <img width="568" loading="lazy" src={getSanityImageUrl(article.featuredImage).width(568).height(320).url()} />}
    </a>
    <figcaption>
      <h2 class="entry-title">
        <a href={`/${article.slug.current}`}>{article.title}</a>
      </h2>
      <PostMeta article={article} />

      <div class="excerpt">{article.excerpt}</div>
    </figcaption>
  </figure>
</article>